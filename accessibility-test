    <script>
        // Simple accessibility test runner
        function runAccessibilityTests() {
            console.log('Running accessibility tests...');

            // Test for skip link
            const skipLink = document.querySelector('a[href="#main-content"]');
            if (skipLink) {
                console.log('‚úÖ Skip link found');
            } else {
                console.log('‚ùå Skip link missing');
            }

            // Test for proper heading structure
            const h1 = document.querySelector('h1');
            const h2s = document.querySelectorAll('h2');
            if (h1 && h2s.length > 0) {
                console.log('‚úÖ Proper heading structure found');
            } else {
                console.log('‚ùå Heading structure issues');
            }

            // Test for form labels
            const inputs = document.querySelectorAll('input, textarea');
            const labels = document.querySelectorAll('label');
            if (inputs.length === labels.length) {
                console.log('‚úÖ All form inputs have labels');
            } else {
                console.log('‚ùå Some form inputs missing labels');
            }

            console.log('Accessibility tests completed');
        }

        // Run tests when page loads
        document.addEventListener('DOMContentLoaded', runAccessibilityTests);
    </script>
